<!-- ====================================
	——— PAGE TITLE SECTION
	===================================== -->
    <section class="pageTitleSection">
      <div class="container">
        <div class="pageTitleInfo">
          <h2>{{# each pageKontakt}}{{{title}}}{{/each}}</h2>
          <ol class="breadcrumb">
            <li><a href="/">Domů</a></li>
            <li class="active">{{# each pageKontakt}}{{{title}}}{{/each}}</li>
          </ol>
        </div>
      </div>
    </section>

	<!-- ====================================
    ——— MAIN SECTION
    ===================================== -->
    <section class="mainContent full-width clearfix conactSection">
      <div class="container">
       <div class="row">
          <div class="col-sm-4 col-xs-12">
            <div class="media addressContent">
              <span class="media-left bg-color-1" href="#">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
              </span>
              <div class="media-body">
                <h3 class="media-heading">Adresa:</h3>
                <p>{{# each pageKontakt}}{{{ulice}}}{{/each}}<br>
                   {{# each pageKontakt}}{{{mesto}}}{{/each}}</p>
              </div>
            </div>
          </div>
          <div class="col-sm-4 col-xs-12">
            <div class="media addressContent">
              <span class="media-left bg-color-2" href="#">
                <i class="fa fa-phone" aria-hidden="true"></i>
              </span>
              <div class="media-body">
                <h3 class="media-heading">Mobil:</h3>
                <p>{{# each pageKontakt}}{{{mobil}}}{{/each}}</p>
              </div>
            </div>
          </div>
          <div class="col-sm-4 col-xs-12">
            <div class="media addressContent">
              <span class="media-left bg-color-3" href="#">
                <i class="fa fa-phone" aria-hidden="true"></i>
              </span>
              <div class="media-body">
                <h3 class="media-heading">Telefon:</h3>
                <p>{{# each pageKontakt}}{{{telefon}}}{{/each}}</a>
                </p>
              </div>
            </div>
          </div>
        </div>
<br>

<div class="row">
	<div class="col-xs-12">
		<div class="homeContactContent">

			{{#if enquirySubmitted}}
			<div class="jumbotron">
				<h4 class="color-2"><b>Děkujeme za zprávu. Vše proběhlo v pořádku.</b></h4>
					<button class="btn btn-primary"><a style="color: white" href="/">Domů</a></button>
			</div>
			{{else}}


			<form method="post">
				<div class="row">
					<input type="hidden" name="action" value="contact">

					<div class="col-sm-6 col-xs-12">
						<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
							<i class="fa fa-user"></i>
							<input type="text" name="name.full" class="form-control border-color-1" id="exampleInputEmail1" placeholder="Jméno a příjmení" value="{{formData.[name.full]}}">
						</div>
					</div>

					<div class="col-sm-6 col-xs-12">
						<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
							<i class="fa fa-envelope" aria-hidden="true"></i>
							<input type="email" name="email" class="form-control border-color-2" id="exampleInputEmail2" placeholder="Váš email" value="{{formData.email}}">
						</div>
					</div>

					<div class="col-sm-6 col-xs-12">
						<div class="form-group">
							<i class="fa fa-phone" aria-hidden="true"></i>
							<input type="text" name="phone" class="form-control border-color-5" id="exampleInputEmail3" placeholder="Váš telefon" value="{{formData.phone}}">
						</div>
					</div>

					<div class="col-sm-6 col-xs-12">
						<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
							<i class="fa fa-book" aria-hidden="true"></i>
							<select name="enquiryType" class="form-control border-color-6">
								<option value="">Předmět zprávy...</option>
								{{#each enquiryTypes}}
								<option value="{{value}}">{{label}}</option>
								{{/each}}
							</select>
						</div>
					</div>



					<div class="col-xs-12">
						<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
							<i class="fa fa-comments" aria-hidden="true"></i>
							<textarea name="message" class="form-control border-color-4" placeholder="Vaše zpráva">{{formData.message}}</textarea>
						</div>
					</div>
					<div class="col-xs-12">
						<div class="formBtnArea">
							<button type="submit" class="btn btn-primary">Odeslat</button>
						</div>
					</div>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>









